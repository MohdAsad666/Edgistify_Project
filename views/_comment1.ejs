<style>
    .sizing {
        width: 60%;
    }

    div.wrap {
        margin: 0 auto 1em auto;
        position: relative;
    }

    li {
        list-style-type: none;
    }

    div.wrap:first-child {
        margin-top: 1em;
    }

    div.comment {
        position: relative;
        margin-left: 60px;
        border-radius: 0.75em 0.75em 0.75em 0.75em;
        background-color: rgba(255, 255, 255, .15);
        line-height: 1.4em;
        font-family: Helvetica;
    }

    div.comment::before {
        content: attr(data-owner);
        border-radius: 0.75em 0.75em 0 0;
        background-color: rgba(255, 255, 255, .15);
        display: block;
        text-indent: 10%;
        background-color: rgba(255, 255, 255, .15);
    }

    div.comment::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        border: 10px solid transparent;
        border-right: 10px solid #ccc;
        margin: -10px 0 0 -20px;
    }

    div.comment p {
        width: 80%;
        margin: 0 auto 1em auto;
        word-wrap: break-word
    }

    .avatar {
        position: absolute;
        top: 50%;
        width: 50px;
        float: left;
        border-radius: 10px;
        margin-top: -25px;
    }

    p+ul.postscript {
        width: 80%;
        font-size: 0.8em;
        margin: -0.5em auto 0 auto;
    }

    ol.postscript::after {
        content: '';
        height: 0.5em;
        display: block;
        clear: both;
    }

    ol.postscript li {
        float: left;
        margin-right: 0.5em;
    }

    ol.postscript li.date {
        float: right;
        margin-right: 0;
    }

    .wrap a:link,
    .wrap a:visited {
        color: #333;
        text-decoration: none;
        border-bottom: 1px solid #333;
    }

    .wrap a:hover,
    .wrap a:active,
    .wrap a:focus {
        color: #f00;
        border-bottom: 1px solid #f00;
    }
</style>
<li>
    <div class="wrap sizing">
        <!-- <img class="avatar" src=" <%=comment.user.avatar%>" /> -->
        <div class="comment" style="font-size: 0.8em;"
            data-owner="<%=comment.user.name%> replied to <%=post.user.name%>'s Post">
            <p>
                <%=comment.content%>
            </p>
            <ol class=" postscript">
                <%if((locals.user)&&(post.user.id == locals.user.id)){%>
                <li><a href="/comments/destroy/<%= comment.id %>">delete</a></li>
                <%}%>
                <li >
                    commented on <%=comment._id.getTimestamp()%>
</li>
</ol>
</div>
</div>
<br>
</li>